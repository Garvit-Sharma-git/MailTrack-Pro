# ────────────── Server ──────────────
PORT=4000
NODE_ENV=development

# ────────────── MongoDB ──────────────
# For local Docker MongoDB
MONGO_URI=mongodb://localhost:27017/trackpata
# OR for MongoDB Atlas (production)
# MONGO_URI=mongodb+srv://<user>:<password>@cluster0.mongodb.net/trackpata?retryWrites=true&w=majority

# ────────────── JWT Authentication ──────────────
JWT_SECRET=your_super_secret_jwt_key
JWT_EXPIRES_IN=7d

# ────────────── Redis (optional, for rate-limiting / caching) ──────────────
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# ────────────── Gmail OAuth (for extension login) ──────────────
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:4000/api/auth/google/callback

# ────────────── Stripe (for subscriptions / billing) ──────────────
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# ────────────── Misc / Logging ──────────────
LOG_LEVEL=info
